<?xml version="1.0" encoding="utf-8" ?>
<project name="app-base" default="build" basedir=".">
    <property file="./build.properties"/>
    <target name="build">
        <echo message="Build app-base image latest"/>
        <exec executable="docker" dir="${project.basedir}" passthru="true">
            <arg value="build"/>
            <arg value="${project.basedir}"/>
            <arg value="--tag"/>
            <arg value="${docker.repository.source}${project.name}:latest"/>
        </exec>
        <echo message="Build app-base image version"/>
        <exec executable="docker" dir="${project.basedir}" passthru="true">
            <arg value="build"/>
            <arg value="${project.basedir}"/>
            <arg value="--tag"/>
            <arg value="${docker.repository.source}${project.name}:${docker.repository.version}"/>
        </exec>
    </target>
</project>
