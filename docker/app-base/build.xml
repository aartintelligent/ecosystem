<?xml version="1.0" encoding="utf-8" ?>
<project name="app-base" default="build" basedir=".">
    <target name="build">
        <echo message="Build app-base image latest"/>
        <exec executable="docker" dir="${basedir}" passthru="true">
            <arg value="build"/>
            <arg value="${basedir}"/>
            <arg value="--tag"/>
            <arg value="${docker.repository.source}${project.name}:latest"/>
        </exec>
    </target>
</project>
