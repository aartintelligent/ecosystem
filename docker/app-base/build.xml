<?xml version="1.0" encoding="utf-8" ?>
<project name="app-base" default="build-version" basedir=".">
    <property file="build.properties"/>
    <property environment="env"/>
    <target name="build-version">
        <echo message="Build app-base image version"/>
        <exec command="docker build . -t ${docker.repository.source}/${project.name}:${docker.repository.version}"
              passthru="true"/>
    </target>
    <target name="build-latest">
        <echo message="Build app-base image latest"/>
        <exec command="docker build . -t ${docker.repository.source}/${project.name}:latest"
              passthru="true"/>
    </target>
</project>
